# ============================================================================
# E-Library Frontend Environment Configuration
# ============================================================================
# Copy this file to .env for local development
# IMPORTANT: Never commit .env to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# Application Metadata
# ----------------------------------------------------------------------------
VITE_APP_NAME=E-Library
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Digital Library Management System

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------
# Backend API URL
# Development: Use '/api' to leverage Vite proxy (recommended)
# Production: Set to your actual backend URL (e.g., https://api.elibrary.com)
VITE_API_URL=/api

# API request timeout in milliseconds (default: 30000 = 30 seconds)
VITE_API_TIMEOUT=30000

# API retry configuration
VITE_API_MAX_RETRIES=3
VITE_API_RETRY_DELAY=1000

# ----------------------------------------------------------------------------
# Authentication
# ----------------------------------------------------------------------------
# Local storage key for JWT token
VITE_AUTH_TOKEN_KEY=elibrary_access_token

# Token validation check interval in milliseconds (default: 60000 = 1 minute)
VITE_AUTH_TOKEN_CHECK_INTERVAL=60000

# Token expiration buffer in seconds (default: 60 seconds)
VITE_AUTH_TOKEN_BUFFER=60

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
# Enable analytics tracking (Google Analytics, Mixpanel, etc.)
VITE_ENABLE_ANALYTICS=false

# Enable service worker for offline support
VITE_ENABLE_SERVICE_WORKER=false

# Enable debug mode (auto-enabled in development)
VITE_ENABLE_DEBUG=false

# ----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------
# Log level: debug | info | warn | error
# Development default: debug
# Production default: warn
VITE_LOG_LEVEL=debug

# Enable console logging
VITE_ENABLE_LOGGING=true

# ----------------------------------------------------------------------------
# Upload Configuration
# ----------------------------------------------------------------------------
# Maximum PDF file size in bytes (default: 10485760 = 10MB)
VITE_MAX_FILE_SIZE=10485760

# Maximum cover image size in bytes (default: 5242880 = 5MB)
VITE_MAX_COVER_SIZE=5242880

# ----------------------------------------------------------------------------
# Pagination
# ----------------------------------------------------------------------------
# Default number of items per page
VITE_PAGINATION_PAGE_SIZE=10

# ----------------------------------------------------------------------------
# External Services (Optional)
# ----------------------------------------------------------------------------
# Google Analytics Measurement ID
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# VITE_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Cloudinary configuration (if using for image optimization)
# VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
# VITE_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# ----------------------------------------------------------------------------
# Development Tools
# ----------------------------------------------------------------------------
# Enable React DevTools in production
# VITE_ENABLE_DEVTOOLS=false

# Enable performance monitoring
# VITE_ENABLE_PERFORMANCE_MONITORING=false
